{
  "swagger": "2.0",
  "info": {
    "description": "後端 Web 開發課程：製作CRUD API",
    "version": "1.0.0",
    "title": "Swagger for Users CRUD API"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "user",
      "description": "Use CRUD API to acces user data"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/Users": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "list available user",
        "description": "",
        "operationId": "GetAllUsers",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "get all successful"
          }
        }
      },
      "post": {
        "tags": [
          "user"
        ],
        "summary": "create new user",
        "description": "",
        "operationId": "CreateUser",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "username",
            "description": "user's name",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "password",
            "description": "user's password",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "create user successful"
          }
        }
      }
    },
    "/Users/{id}": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "get user data by user id",
        "description": "",
        "operationId": "GetUserById",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of user to return",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "get one user successful"
          }
        }
      },
      "delete": {
        "tags": [
          "user"
        ],
        "summary": "delete user data by user id",
        "description": "",
        "operationId": "DeleteUser",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of user to delete",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "delete successful"
          }
        }
      },
      "patch": {
        "tags": [
          "user"
        ],
        "summary": "update user password by user id",
        "description": "",
        "operationId": "UpdatePwd",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of user to update",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "in": "query",
            "name": "password",
            "description": "new password",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "update successful"
          }
        }
      }
    }
  },
  "definitions": {
    "user": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64",
          "description": "auto increment"
        },
        "name": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    }
  }
}